{
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "commit-search-depth": 1000,
  "packages": {
    ".": {
      "release-type": "rust",
      "plugins": ["cargo-workspace"],
      "exclude-paths": ["helm-charts"],
      "extra-files": [
        {
          "type": "yaml",
          "path": "helm-charts/pharia-kernel/Chart.yaml",
          "jsonpath": "$.appVersion"
        }
      ]
    },
    "helm-charts/pharia-kernel": {
      "release-type": "helm"
    }
  }
}
